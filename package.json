{
  "name": "@chancecox/websocket-client",
  "version": "1.0.0",
  "description": "A comprehensive WebSocket client package with SimpleWebSocket (app authentication) and WebSocketClient (advanced features)",
  "type": "module",
  "main": "dist/websocket-client.js",
  "module": "dist/websocket-client.esm.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:simple": "jest tests/SimpleWebSocket.test.js",
    "test:advanced": "jest tests/WebSocketClient.test.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "docs": "jsdoc src -d docs",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "websocket",
    "client",
    "authentication",
    "app-id",
    "app-secret",
    "reconnection",
    "events",
    "ping",
    "pong",
    "real-time",
    "communication",
    "laravel",
    "bref",
    "aws"
  ],
  "author": "Chance Cox <chance.cox@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chancemcox/websocket-client-npm.git"
  },
  "bugs": {
    "url": "https://github.com/chancecox/websocket-client-npm/issues"
  },
  "homepage": "https://github.com/chancecox/websocket-client-npm#readme",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "core-js": "^3.45.0",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^30.0.5",
    "jsdoc": "^4.0.0",
    "rollup": "^3.20.0",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-typescript2": "^0.35.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "reconnecting-websocket": "^4.4.0"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  }
}
